<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>ofelia.controller.action</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlPersona</servlet-name>
        <servlet-class>ofelia.controller.ControlPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarPersona</servlet-name>
        <servlet-class>ofelia.controller.ListarPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarAlumno</servlet-name>
        <servlet-class>ofelia.controller.ListarAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlLector</servlet-name>
        <servlet-class>ofelia.controller.ControlLector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarLector</servlet-name>
        <servlet-class>ofelia.controller.ListarLector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarPeriodo</servlet-name>
        <servlet-class>ofelia.controller.ListarPeriodo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlPeriodo</servlet-name>
        <servlet-class>ofelia.controller.ControlPeriodo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlPersona</servlet-name>
        <url-pattern>/ControlPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarPersona</servlet-name>
        <url-pattern>/ListarPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarAlumno</servlet-name>
        <url-pattern>/ListarAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlLector</servlet-name>
        <url-pattern>/controlLector</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarLector</servlet-name>
        <url-pattern>/listarLector</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarPeriodo</servlet-name>
        <url-pattern>/ListarPeriodo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlPeriodo</servlet-name>
        <url-pattern>/ControlPeriodo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
